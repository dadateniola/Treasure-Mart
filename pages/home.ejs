<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Treasure Mart</title>
    <%- include('partials/head') %>
    <link rel="stylesheet" href="/styles/home.css">
</head>

<body data-barba="wrapper">
    
    <%- include('partials/loader') %>
    <%- include('partials/navbar') %>
    
    <div class="container" data-scroll-container>
        <main data-barba="container" data-barba-namespace="home" class="page-home">
            <%- include('partials/alert') %>
            <section class="hero page">
                <div class="hero-img" data-scroll data-scroll-speed="-0.6">
                    <img src="/images/model.png" alt="hero">
                </div>
                <div class="hero-text">
                    <h2 class="txt-anim" data-scroll data-scroll-speed="0.2">Spare your wallet</h2>
                    <br>
                    <h2 class="txt-anim" data-scroll data-scroll-speed="0.1">Shop at,</h2>
                    <div class="hero-gap"></div>
                    <div class="hero-name">
                        <h1 class="txt-anim" data-scroll data-scroll-speed="0.3">Treasure Mart</h1>
                    </div>
                </div>
                <div class="bonus">
                    <div class="bonus-box img-here">
                        <img src="/images/bonus/essential oil.jpg" alt="">
                    </div>
                </div>
            </section>
            <section class="newest">
                <div class="newest-img full">
                    <div class="newest-img-box full img-here"></div>
                    <div class="overlay full"></div>
                </div>
                <div class="newest-nav">
                    <div class="newest-nav-before"></div>
                    <hr>
                    <div class="newest-nav-after"></div>
                </div>
                <div class="newest-images">
                    <% if (newestImages.length > 0) { %>
                        <% for( let i = 0; i < newestImages.length; i++ ) { %>
                            <img src="/images/newest/<%= newestImages[i] %>" alt="newest">
                        <% } %>
                    <% } %>
                </div>
            </section>
            <section class="sales page page-y">
                <div class="sales-section">
                    <div class="sales-head">
                        <div class="head">
                            <h1>Popular</h1>
                            <span>SHOP</span>
                        </div>
                        <div class="options">
                            <span class="off">Prevoius</span>
                            <span>|</span>
                            <span>Next</span>
                        </div>
                    </div>
                    <div class="sales-box">
                        <% for( let i = 0; i < popular.length; i++ ) { %>
                            <div class="sales-cont">
                                <div class="sales-img parallax img-here">
                                    <a href="/product?url=/images/popular/<%= popular[i] %>"><img src="/images/popular/<%= popular[i] %>" alt="popular"></a>
                                </div>
                                <br>
                                <h3><%= popular[i].split('.').shift().split('-').join(' ') %></h3>
                                <p><%= popular[i].length %>.00 $</p>
                            </div>
                        <% } %>
                    </div>
                </div>
                <div class="gap"></div>
                <div class="sales-section">
                    <div class="sales-head">
                        <div class="head">
                            <h1>Deals</h1>
                            <span>SHOP</span>
                        </div>
                        <div class="options">
                            <span class="off">Prevoius</span>
                            <span>|</span>
                            <span>Next</span>
                        </div>
                    </div>
                    <div class="sales-box">
                        <% for( let i = 0; i < deals.length; i++ ) { %>
                            <div class="sales-cont">
                                <div class="sales-img parallax img-here">
                                    <a href="/product?url=/images/deals/<%= deals[i] %>"><img src="/images/deals/<%= deals[i] %>" alt="deal"></a>
                                </div>
                                <br>
                                <h3><%= deals[i].split('.').shift().split('-').join(' ') %></h3>
                                <span class="old"><%= deals[i].length*2 %>.00 $</span>
                                <span class="new"><%= deals[i].length %>.00 $</span>
                            </div>
                        <% } %>
                    </div>
                </div>
            </section>
            <section class="collections light page page-y">
                <div class="collection-head">
                    <div class="head light">
                        <h1>Collections</h1>
                        <span>SHOP</span>
                    </div>
                </div>
                <div class="gap"></div>
                <% 
                    let skipCount = 0
                    let isStart = true;
                %>
                <% collections.forEach((elem, index) => { %>
                    <% if (isStart) { %>
                        <% isStart = false %>
                        <div class="collections-section hor">
                            <div class="collections-text">
                                <h6>View our unique collections and find the one that suits your needs.</h6>
                                <br>
                                <a href="/">View all collections</a>
                            </div>
                            <div class="collections-box flex-end">
                                <div class="collections-img parallax img-here">
                                    <a href="/product?url=/images/collections/<%= elem %>"><img src="/images/collections/<%= elem %>" alt="collection"></a>
                                    <div class="collections-img-overlay full"></div>
                                    <h3 class="collections-img-text"><%= elem.split('.').shift() %></h3>
                                </div>
                                <div class="collections-box-text">
                                    <h5>collection</h5>
                                    <h6><%= elem.split('.').shift() %></h6>
                                </div>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="collections-section <%= (skipCount == 0) ? 'hor' : 'ver' %>">
                            <% if (index%2 == 0) { %>
                                <div></div>
                            <% } %>
                            <div class="collections-box">
                                <div class="collections-img parallax img-here">
                                    <a href="/product?url=/images/collections/<%= elem %>"><img src="/images/collections/<%= elem %>" alt="collection"></a>
                                    <div class="collections-img-overlay full"></div>
                                    <h3 class="collections-img-text"><%= elem.split('.').shift() %></h3>
                                </div>
                                <div class="collections-box-text">
                                    <h5>Collection</h5>
                                    <h6><%= elem.split('.').shift() %></h6>
                                </div>
                            </div>
                        </div>
                    <% } %>
                    <% (skipCount == 0) ? skipCount = 2 : skipCount-- %>
                <% }) %>
            </section>
            <section class="newsletter page page-y">
                <div class="newsletter-box">
                    <div class="newsletter-text">
                        <h5>Newsletter</h5>
                        <br>
                        <h6>Register now with our newsletter and get the latest updates available</h6>
                    </div>
                    <div class="newsletter-form">
                        <form>
                            <input type="text" placeholder="Name" name="name">
                            <div class="row">
                                <input type="email" placeholder="Email" name="email">
                                <button type="submit">Send</button>
                            </div>
                        </form>
                    </div>
                </div>
            </section>
        </main>
    </div>

    <%- include('partials/foot') %>

</body>

</html>